<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стили для Material Calendar View (темная тема) -->
    <style name="CalendarDateTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarHeaderTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarWeekDayTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#B3B3B3</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>